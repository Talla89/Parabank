pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Talla89/Parabank.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                powershell 'npm install'
            }
        }

        stage('Run Cypress Tests') {
            steps {
                powershell 'npx cypress run --browser chrome'
            }
        }
    }
}