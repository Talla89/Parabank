pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
          branches: [[name: '*/main']], 
          userRemoteConfigs: [[
            url: 'https://github.com/Talla89/Parabank.git',
            credentialsId: '6fa9589f-d1ef-41ce-937a-4e1ea74b28af'
          ]]
])

            }
        }

        stage('Build') {
            steps {
                git 'https://github.com/Talla89/Parabank.git'
                script {
                    def jenkinsfile = readFile('cypress/e2e/jenkinsfile')
                    // Continuez avec votre logique de construction
                }
            }
        }


        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}