pipeline {
    agent any

    environment {
        GIT_CREDENTIALS_ID = '6fa9589f-d1ef-41ce-937a-4e1ea74b28af'
        GIT_REPO = 'https://github.com/Talla89/Parabank.git'
        GIT_BRANCH = 'main'
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                              branches: [[name: "*/${env.GIT_BRANCH}"]],
                              userRemoteConfigs: [[
                                  url: env.GIT_REPO,
                                  credentialsId: env.GIT_CREDENTIALS_ID
                              ]]
                    ])
                }
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh './mvnw clean install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh './mvnw test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
    }

    post {
        always {
            echo 'Pipeline termin√© !'
        }
    }
}
