pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Talla89/Parabank.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}